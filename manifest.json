{
    "manifest_version": 2,

    "name": "Hegarty Calculator",
    "description": "Calculator to assist in solving hegarty maths questions",
    "author": "Mr. Ulferno",
    "version": "0.1.0",


    "icons": {
        "16": "icon_16.png",
        "128": "icon_128.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "html/popup.html"
    },

    "content_scripts": [{
        "js": ["js/content/injection.js", "js/content/data.js"],
        "matches": ["https://hegartymaths.com/*"]
    }],

    "background": {
        "scripts": ["js/background/background.js"],
        "persistent": false
    },

    "web_accessible_resources": ["js/content/content.js", "js/content/libs/algebra-0.2.6.min.js", "js/content/libs/latex-to-js.js", "js/content/libs/math.min.js", "js/content/libs/evaluatex.min.js"],

    "permissions": [
        "storage",
        "background",
        "contextMenus",
        "https://hegartymaths.com/"

    ]
}